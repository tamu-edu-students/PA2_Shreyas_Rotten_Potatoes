<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6"> 

      <h1 class="mb-4">Editing Movie: <span class="text-muted"><%= @movie.title %></span></h1>

      <%= render "form", movie: @movie %>

      <div class="mt-4 d-flex justify-content-between">
        <%= link_to "Show this movie", @movie, class: "btn btn-info" %>
        <%= link_to "Back to movies", movies_path, class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>
