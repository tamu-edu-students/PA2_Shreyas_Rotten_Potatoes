<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8"> 

      <% if notice.present? %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
      <% end %>


      <%= render partial: 'movie', locals: { movie: @movie, context: 'show' } %>


      <div class="mt-4 d-flex justify-content-between">
        <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-warning" %>
        
        <%= button_to "Delete", @movie, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>

        <%= link_to "Back to Movies", movies_path, class: "btn btn-secondary" %>
      </div>

    </div>
  </div>
</div>
